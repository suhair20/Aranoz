                                        <th scope="col">Action</th>
                                        
                                        
                                       
                                        

                                    </tr>
                                </thead>
                                <tbody>
                                    <%detials.products.forEach((user,index)=>{%>
                                 <tr>
                                 
                                 <td>
                                    <img src="/sharpimages/<%=user.productId.images.image1%>" style="width:70px" alt="" >
                                 </td>
                                 
                                 <td><%=user.price%></td>
                                 <td><%=user.quantity%></td>
                                 
                                 <td><%=user.totalPrice%></td>
                                 <td>
                                    <% if (user.productStatus === 'placed') { %>
                                        <span class="badge rounded-pill alert-primary text-primary ">placed</span>
                                        <% } else if (user.productStatus === 'shipped') { %>
                                            <span class="badge rounded-pill alert-info text-info">Shipped</span>
                                        <% } else if (user.productStatus === 'out-for-delivery') { %>
                                            <span class="badge rounded-pill alert-warning text-warning">Out for Delivery</span>
                                        <% } else if (user.productStatus === 'delivered') { %>
                                            <span class="badge rounded-pill alert-success text-success">Delivered</span>
                                        <% } else if (user.productStatus === 'cancelled') { %>
                                            <span class="badge rounded-pill alert-danger text-danger">Cancelled</span>
                                        <% } else if (user.productStatus === 'Return') { %>
                                            <span class="badge rounded-pill alert-secondary text-secondary">Returned</span>
                                        <% } %>
                                 </td>
                                 <td><select  id="<%=detials._id%><%=user._id%>"onchange="status('<%=detials._id%>', '<%=user._id%>')">
                                    <option value="placed" <% if
                                    (user.productStatus=='placed' ) { %> selected <% } %>
                                        >placed</option>
                                <option value="out-for-delivery" <% if
                                    (user.productStatus=='out-for-delivery' ) { %>
                                    selected <% } %>>out for delivery</option>
                                <option value="shipped" <% if
                                    (user.productStatus=='shipped' ) { %> selected <% }
                                        %>>shipped</option>
                                <option value="delivered" <% if
                                    (user.productStatus=='delivered' ) { %> selected <% }
                                        %>>delivered</option>
                                
                                
                                
                                </select></td>
                              
                               
</tr>
