<%- include('../layout/admin/header.ejs') %>

<body>
    <main>
        <header class="main-header style-2 navbar">
            <div class="col-brand">
                <a href="index.html" class="brand-wrap">
                    <img src="/asset/img/logo.png" class="logo" alt="Aranoz" />
                </a>
            </div>
           
        </header>
        <section class="content-main mt-80 mb-80">
            <div class="card mx-auto card-login">
                <div class="card-body">
                    <h4 class="card-title mb-4">Sign in</h4>
                    <form action="#" method="post">
                        <% 
                        if(typeof message !=='undefined'){
                          %>
                          <h5 style="color: red;" id="errorMessage"><%-message %></h5>
          
                          <%
                        }
                        %>
                        <div class="mb-3">
                            <input class="form-control" name="email" id="email" placeholder=" email" type="text" />
                        </div>
                        <!-- form-group// -->
                        <div class="mb-3">
                            <input class="form-control" name="password" id="email" placeholder="Password" type="password" />
                        </div>
                        <!-- form-group// -->
                        <div class="mb-3">
                            <a href="#" class="float-end font-sm text-muted">Forgot password?</a>
                            <label class="form-check">
                                <input type="checkbox" class="form-check-input" checked="" />
                                <span class="form-check-label">Remember</span>
                            </label>
                        </div>
                        <!-- form-group form-check .// -->
                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100">Login</button>
                        </div>
                        <!-- form-group// -->
                    </form>
                   
                    
                    
                </div>
            </div>
        </section>



<%- include('../layout/admin/footer.ejs') %>
