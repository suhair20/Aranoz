<%- include('../layout/admin/header.ejs') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

<body>
    
    
            
                
                   
              
                
                   
                
                
                
         
           
         
               
            
           
    <main class="">
       
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title"></h2>
                    
                </div>
             
            </div>
            <div class="card mb-4">

                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col col-check flex-grow-0">
                           
                        </div>
                        <div class="col-md-4 col-12 me-auto mb-md-0 mb-3">
                            <h2 class="content-title card-title"><%=data%> Sales Report</h2>
                        </div>
                       
                        <div class="col-md-2 col-6">
                          <a href="/admin/DownloadPdf?id=<%=data%>"> <button  class="btn btn-info ">Download</button></a> 
                        </div>
                    </div>
                </header>
                <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive" >
                    
                            <div id="reloadDiv">
                            <table  class="table table-bordered border-secondary ">
                                <thead>
                                    <tr>
                                        <th scope="col">NO</th>
                                        <th scope="col">Order Id</th>
                                        <th scope="col">Billing Name</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Total</th>
                                        <th scope="col">Payment</th>
                                       
                                        

                                    </tr>
                                </thead>
                                <tbody>
                                    <% yearlyorder.forEach((order,index) => {%>
                                        
                                   
                                 <tr>
                                 <td><%=index+1%></td>
                                 
                                 <td><%=order._id%></td>
                                 <td><%=order.delivery_address?.name||'n/a'%></td>
                                 <td><%=order.orderDate?.toLocaleDateString('en-US', {
                                    weekday: 'short' , year: 'numeric' , month: 'short' ,
                                    day: 'numeric'||'n/a' }) %></td>
                                 <td><%=order.subtotal%></td>
                                 <td><%=order.payment%></td>
                                 
                                    
                                       
                                   
                                 
                              
                                </tr>
                            <%})%>      
                                </tbody>
                            </table>
                            </div>
                    </div>
                    
                
                
                    
                    
                </div>
                <!-- card-body end// -->
            </div>
            <!-- card end// -->
          






        </section>