        <script>
     document.querySelectorAll('.btn-danger').forEach(button => {
    // Add event listener to each delete button
    button.addEventListener('click', async function() {
        // Get the productId from the clicked button's data attribute
        const productId = this.getAttribute('data-user-id');
                  
                const result = await Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!",
              });
              if (result.isConfirmed) {
                try {
               
               
                  const response = await fetch(`/admin/deletproduct/${productId}`, {
                    method: 'DELETE',
                   });
             if (response.ok) {
                    location.reload()
                    } else {
                    
                    Swal.fire({
                      title: "Error",
                      text: "Failed to delete the product.",
                      icon: "error",
                    });
                  }
                } catch (error) {
                
                  console.error(error);
            
                  Swal.fire({
                    title: "Error",
                    text: "An unexpected error occurred.",
                    icon: "error",
                  });
                }
              }
            });
        });
            </script>
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                document.querySelectorAll('.block-user,.Unblock-user').forEach(function(Element){
                  console.log(Element);
                
                  Element.addEventListener('click', function(event){
                    event.preventDefault();
    
                    const userId=Element.getAttribute('data-user-id')
                    const action = Element.classList.contains('block-user')? 'block':'Unblock';
                    console.log("hiii");
    
    
                    fetch(`/admin/blockproduct/${userId}`,{
                        method:'PATCH',
                    })
                    .then(Response=>Response.json())
                    .then(data=>{
                        if(data.block==true){
                            console.log("heloo");
                            
                            //updating the button text and color
                            Element.querySelector('span').classList.toggle('alert-success');
                                Element.querySelector('span').classList.toggle('alert-warning');
                                Element.querySelector('span').innerText = action === 'block' ? 'unblock' : 'block';
                                
                                // Replace button class
                                Element.classList.remove(action === 'block' ? 'block-user' : 'unblock-user');
                                Element.classList.add(action === 'block' ? 'unblock-user' : 'block-user');
                        }
                    }).catch((error)=>{
                        console.log(error.message);
                    })
                    
    
                  });
    
                });
            });
    
            </script>
        
        <script>
          
        
            function productId(id) {
                console.log("Product ID:", id);
                productId = id; // Assigning the id to the global variable
            }
        
            function applyOffer(offerId) {
                console.log("Offer ID:", offerId);
                console.log("Product ID:", productId);
        
                fetch('/admin/applyOffer', {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        id: offerId,
                        productId: productId // Using the productId captured globally
                    }),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        $('#addModal').modal('hide');
                        location.reload();
                    } else {
                        Swal.fire('Error', 'Error adding offer.', 'error');
                    }
                })
                .catch(error => {
                    console.log(error);
                });
            }
        </script>
        






