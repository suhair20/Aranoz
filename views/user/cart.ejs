    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      function removeProduct(productId,userId){
        data={productId,userId}
        Swal.fire({
                title: 'Are you sure?',
                text: 'This product will be removed',
                icon: 'question',
                reverseButtons: true,
                confirmButtonText: 'Yes',
                showCancelButton: true,
                confirmButtonColor: '#1e6e2c',
                cancelButtonColor: '#97a399',
        }).then((result)=>{
          if(result.isConfirmed){
            fetch('/removecart',{
             method:'POST',
             headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(data),
            })
            .then(Response=>Response.json())
            .then(Response=>{
              if(Response.success){
                
               location.reload()
              }
            })
          }
        })
      }
    </script>
    <script>
       function updateQuantity(productId, count) {
            const data = { productId, count };
            $.ajax({
                url: '/updatecart',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),   
                success: (response) => {
                    if (response.success) {
                      console.log("wecome");
                    
                        $("#reloadDiv").load("/cart #reloadDiv");
                    } else {
                        swal.fire({
                            icon: "info",
                            title: "Oops...",
                            text:response.message,
                        });
                    }
                },
                error: (error) => {
                    console.error('Error updating cart:', error);
                }
            });
        }
    </script>