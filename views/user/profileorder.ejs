    <img src="/public/asset/img/breadcrumb.png" alt="Breadcrumb Image">
</div>



<main>
	<div class="main1">
		
		<section id="portfolio">
			
			<h2 style="margin-right: 60%;" >Orders</h2>
			<div class="containerr">
                <table class="table table-bordered">
                    <thead>
                      <tr>
                        <th scope="col">NO</th>
                        <th scope="col">Date</th>
                        <th scope="col">Amount</th>
                        <th scope="col">payment</th>
                        <th scope="col">details</th>
                      </tr>
                    </thead>
                    <tbody>
						<%console.log(order,"hiii");%>
						<%order.reverse().forEach((order,index)=>{%>
                      <tr>
                        <th scope="row"><%=index+1%></th>
                        <td> <%= order.orderDate.toLocaleDateString('en-US', {
							weekday: 'short' , year: 'numeric' , month: 'short' ,
							day: 'numeric' }) %></td>
                        <td><%=order.subtotal%></td>
                        <td><%=order.payment%></td>
                     <td ><a href="/ordercancel?id=<%=order._id%>"><button class="btn btn-md rounded ">View</button></a></td>
                      </tr>
					<%})%>
                    </tbody>
                  </table>
				
				
				</div>
			</div>
		
	</div>
	<aside style="background-color: aliceblue;" id="aside">
       
		<div>
            <ul class="menu-aside">
                <li class="menu-item ">
                    <a class="menu-link" href="/profile">
